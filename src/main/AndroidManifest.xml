<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.erp.taiyo">


    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.INSTALL_PACKAGES"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE">
    </uses-permission>


    <!--"@mipmap/ic_launcher"-->
    <application
        android:allowBackup="true"
        android:icon="@drawable/drk_ico"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_NO"
        android:usesCleartextTraffic="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="m"
        >
        <activity android:name="com.erp.taiyo.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:usesCleartextTraffic="true"
            android:theme="@style/SplashTheme"

            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.erp.taiyo.LoginActivity"
            android:screenOrientation="portrait"
            />


        <activity android:name="com.erp.taiyo.MenuActivity"
            android:screenOrientation="portrait"
            />


    </application>










</manifest>