        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <Button
                android:layout_weight="1"
                android:id="@+id/btn_mat"
                android:text="구매/자재"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_blue_color_nor"
                android:layout_margin="5sp"
                android:visibility="gone"
                />
            <Button
                android:layout_weight="1"
                android:id="@+id/btn_sal"
                android:text="영업"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_blue_color_nor"
                android:layout_margin="5sp"
                android:visibility="gone"
                />
            <Button
                android:layout_weight="1"
                android:id="@+id/btn_prd"
                android:text="생산"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_blue_color_nor"
                android:layout_margin="5sp"
                android:visibility="gone"
                />


        </LinearLayout>

        <GridView
            android:id="@+id/gv_main_menu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:horizontalSpacing="10dp"
            android:numColumns="3" >

        </GridView>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Copyright Infosolution All Rights Reserved."
            android:textColor="#333333"
            android:textSize="13sp" />
    </LinearLayout>


    <!-- 내비게이션 드로어의 토대가 되는 NavigationView를 정의합니다　-->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/fragment_navi_header"
        app:menu="@menu/menu_navi"/>

</androidx.drawerlayout.widget.DrawerLayout>
